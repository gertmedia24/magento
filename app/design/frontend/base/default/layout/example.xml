<?xml version="1.0" ?>
<!DOCTYPE layout>

<!-- Mastering Magento Sect 2: Frontend Layouts -->

<layout version="0.1.0">
    <example_index_index>
        <!-- Defines 2-col layout with right hand sidebar -->
        <update handle="page_two_columns_right" />

        <!-- Sect 2: Add template for rendering content area -->
        <reference name="content">
            <!-- loads our custom block:
             mage looks at 'example' and finds the module
             then welcome block
             -->
            <block type="example/welcome" />
        </reference>
    </example_index_index>
</layout>
